{
  "parser": "babel-eslint",
  "plugins": [
    "flow-vars",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ],
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "indent": [
      "error",
      2,
      {"SwitchCase": 1}
    ],
    "no-console": 0,
    "no-var": 2,
    "curly": [
      2,
      "multi",
      "consistent"
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": false
      }
    ]
  },
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "es6": true,
    "node": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ]
}
